<section class="container">
    <div class="row">
        <div class="grid-4 disappear"></div>

        <div class="grid-4 card-form">
            <h3 class="text-gradient">Cadastrar</h3>
            <form action="/user/cadastrar" method="post" class="mt-3">
                <div>
                    <label for="name">Nome:</label>
                    <input type="text" name="name"  id="name"  class="mt-1">
                </div>

                <div class="mt-2">
                    <label for="email">E-mail:</label>
                    <input type="email" name="email" id="email" class="mt-1">
                </div>

                <div class="mt-2">
                    <label for="senha">Senha:</label>
                    <input type="password" id="senha" name="senha"  class="mt-1">
                </div>

                <div class="mt-2">
                    <label for="file" class="btn">imagem do perfil</label>
                    <input type="file" name="file" id="file">
                </div>

                
                <div class="mt-4">
                    <input type="submit" value="Cadastrar" class="link">
                </div>
            </form>
        </div>

        <div class="grid-4 disappear"></div>
    </div>
</section>
