<section class="container">
    <div class="row">
        <div class="grid-4 disappear"></div>

        <div class="grid-4 card-form">
            <h3 class="text-gradient">Cadastrar</h3>
            <form action="/book/cadastrado" method="post" enctype="multipart/form-data" class="mt-3">
                <div>
                    <label for="name">Título:</label>
                    <input type="text" name="titulo"  id="name" placeholder="Digite o título do livro" class="mt-1">
                </div>

                <div class="mt-2">
                    <label for="pagina">Páginas:</label>
                    <input type="number" name="pagina" id="pagina" placeholder="Quantas páginas o livro possui?" class="mt-1">
                </div>

                <div class="mt-2">
                    <label for="autor">Autor:</label>
                    <input type="text" id="autor" name="autor" placeholder="Digite o nome do autor" class="mt-1">
                </div>

                <div class="mt-2">
                    <label for="description">Descrição:</label>
                    <textarea name="descricao" id="description" cols="30" rows="5" class="mt-1"></textarea>
                </div>

                <div class="mt-2">
                    <label for="file" class="btn">Escolher imagem</label>
                    <input type="file" name="file" id="file">
                </div>

                <div class="mt-4">
                    <input type="submit" value="Cadastrar" class="link">
                </div>
            </form>
        </div>

        <div class="grid-4 disappear"></div>
    </div>
</section>
