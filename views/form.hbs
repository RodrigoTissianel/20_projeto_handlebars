<link rel="stylesheet" href="/css/form.css">
<h1>Cadastrar livros</h1>

<form action="/book/cadastrado" method="post" enctype="multipart/form-data">
    <div>
        <label for="name">Título:</label>
        <input type="text" name="titulo"  id="name" placeholder="Digite o título do livro">
    </div>

    <div>
        <label for="pagina">Páginas:</label>
        <input type="number" name="pagina" id="pagina" placeholder="Quantas páginas o livro possui?">
    </div>

    <div>
        <label for="autor">Autor:</label>
        <input type="text" id="autor" name="autor" placeholder="Digite o nome do autor">
    </div>

    <div>
        <label for="description">Descrição:</label>
        <textarea name="descricao" id="description" cols="30" rows="10"></textarea>
    </div>

    <span class="upload">
        <label for="file">Upload</label>
    </span>
    <input type="file" name="file" id="file">

   <div>
        <input type="submit" value="Enviar">
    </div>
</form>
